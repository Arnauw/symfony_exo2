{% extends 'base.html.twig' %}

{% block title %}Hello UserProfileController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{{ app.user.firstname }}'s Profile</h1>

        <div class="name">
            Firstname: {{ app.user.firstname }}
        </div>
        <div class="lastname">Lastmame: {{ app.user.lastname }}</div>
        <div class="email">Email: {{ app.user.email }}</div>
        <div>
            <a href="{{ path('app_user_profile_update', {'id': app.user.id}) }}" class="btn btn-warning">Edit</a>
        </div>
    </div>
{% endblock %}

