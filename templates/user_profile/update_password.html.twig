{% extends 'base.html.twig' %}

{% block title %}Update Password{% endblock %}

{% block body %}
    <div class="container my-5">
        {# Use the standard grid system to center the card and control its width #}
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">

                {# The consistent card style with shadow and rounded corners #}
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-body p-4 p-sm-5">

                        <h1 class="card-title text-center mb-4">Update Password</h1>
                        <p class="text-center text-muted mb-4">Choose a new, strong password.</p>

                        {{ form_start(registrationForm) }}

                        {# Render any global form errors here #}
                        {{ form_errors(registrationForm) }}

                        {{ form_row(registrationForm.password) }}

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Save New Password</button>
                        </div>

                        {{ form_end(registrationForm) }}

{#                        <p class="text-danger text-center mt-2">You will be logged out.</p>#}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
