{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">

        {{ dump(app.user) }}
        <h1>Hello {{ app.user.firstname }}!</h1>
        <a href="{{ path('app_logout') }}">Logout</a>
    </div>

    <div class="read-users">
        <h2>Users List</h2>
        <ul>
            {% for user in users %}
                <li>
                    {{ user.email }} -
                    {% if user.roles|length > 0 %}
                        Roles: {{ user.roles|join(', ') }}
                    {% else %}
                        No roles assigned
                    {% endif %}
                    <div>
                        <a href="{{ path('app_dashboard_admin_update', {'id': user.id}) }}" class="btn btn-warning">Edit</a>
                        <a href="{{ path('app_dashboard_admin_delete', {'id': user.id}) }}" class="btn btn-danger">Delete</a>
                    </div>
                </li>
            {% else %}
                <li>No users found.</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
