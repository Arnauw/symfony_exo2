{% extends 'base.html.twig' %}

{% block title %}Amine Dashboard{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="card shadow-sm">
            <div class="card-header">
                <h2 class="h4 mb-0 text-center">Users List</h2>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                    <tr>
                        <th scope="col">Avatar</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Roles</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>
                                <img src="{{ asset('imgs/avatars/' ~ user.imageName) }}" alt="{{ user.firstname }}'s Avatar" class="admin-avatar-img">
                            </td>
                            <td>{{ user.firstname }} {{ user.lastname }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% for role in user.roles %}
                                    <span class="badge
                                        {% if role == 'ROLE_ADMIN' %} bg-primary
                                        {% else %} bg-secondary
                                        {% endif %}">
                                        {{ role|replace({'ROLE_': ''})|capitalize }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-light text-dark">User</span>
                                {% endfor %}
                            </td>
                            <td class="text-center">
                                <a href="{{ path('app_dashboard_admin_update', {'id': user.id}) }}" class="btn btn-warning btn-sm me-2">Edit</a>
                                <a href="{{ path('app_dashboard_admin_delete', {'id': user.id}) }}" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-4">No users found.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
